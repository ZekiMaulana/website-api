<%- include("partials/headers.ejs") %>

<section class="main-content">
  <% const ranNum = Math.floor(Math.random() * content.data.length) %>
  <% const topAired = content.data %>
  
  <% const topAiredMovie = movie.data %>
  <% const topAnime = top.data %>
  <% const topUpcoming = upcoming.data %>

  <div class="content-title">
    <h1><%= topAired[ranNum].title %></h1>
    <span><%= topAired[ranNum].aired.prop.from.day %>. 
      <% var month = topAired[ranNum].aired.string.split(" ")[0] %>
      <%= month %>, 
      <%= topAired[ranNum].aired.prop.from.year %></span>
    <div class="score">
      <button class="score-button"><%= topAired[ranNum].score %></button>
      <% const score = Math.floor(topAired[ranNum].score) %>
      <p><% for(var i= 1; i<= 10; i++) { if(i <= score) { %><img src="/images/star.svg" height="30px"><% } else { %><img src="/images/star-blank.svg" height="30px"><% }} %><br>
        <img src="/images/profile.svg" height="20px"> <%= topAired[ranNum].scored_by %> Votes</p>
    </div>
    <b>| <% topAired[ranNum].genres.forEach(genre => { %><%= genre.name %> | <% }) %>
      <% topAired[ranNum].explicit_genres.forEach(genre => { %><%= genre.name %> | <% }) %>
      <% topAired[ranNum].themes.forEach(genre => { %><%= genre.name %> | <% }) %>
      <% topAired[ranNum].demographics.forEach(genre => { %><%= genre.name %> | <% }) %></b>
    <p><%= topAired[ranNum].synopsis.slice(0, 240) %>...<br><a href="/anime?animeId=<%= topAired[ranNum].mal_id %>">Continue reading</a></p>
  </div>

  <div class="content-video">
      <% if(topAired[ranNum].trailer.embed_url === null){ %>
        <div style="text-align: center;">
          <img class="card" src=<%= topAired[ranNum].images.jpg.large_image_url %>>
          <h1>Video Content not Found</h1>
        </div>
          
        <% } else { %>
        <iframe class="card video-box" src=<%= topAired[ranNum].trailer.embed_url %>></iframe>
      <% } %>
  </div>
  
  <div class="text-title title-featured"><h2>Featured</h2></div>
  
  <%var b=21; var title = ""; for(var i=0; i<b; i++){ %>
    <% if(topAired[i].title !== title){%>
    <div class="card-film">
      <a href="/anime?animeId=<%= topAired[i].mal_id %>" style="color: black;">
      <div class="card-img">
      <img class="card" src=<%= topAired[i].images.jpg.large_image_url %> width="98%" height="325px">
      <div class="text1">Featured</div>
      <div class="centered"><%= topAired[i].synopsis.slice(0,300) %>....</div>
      <div class="text2">✩ <%= topAired[i].score %></div>
      </div>
      <% var title_name = topAired[i].title + " (" + topAired[i].aired.string.split(" ")[2] + ")" %>
      <h4><%= title_name.slice(0, 26) %></h4>
      </a>
      <p><%= topAired[i].aired.prop.from.day %> <% var month = topAired[i].aired.string.split(" ")[0] %><%= month %> <%= topAired[i].aired.prop.from.year %></p>
    </div>
    <% } else { b++ } title = topAired[i].title; %>
   <% } %>
   <div class="text-title"><hr /></div>

   <div class="text-title title-featured"><h2>Movie</h2></div>
  
   <% var b=7;  var title = ""; for(var i=0; i<b; i++){ %>
    <% if(topAiredMovie[i].title !== title){%>

    <div class="card-film">
      <a href="/anime?animeId=<%= topAiredMovie[i].mal_id %>" style="color: black;">
      <div class="card-img">
      <img class="card" src=<%= topAiredMovie[i].images.jpg.large_image_url %> width="98%" height="325px">
      <div class="text1">Featured</div>
      <div class="centered"><%= topAiredMovie[i].synopsis.slice(0,300) %>....</div>
      <div class="text2">✩ <%= topAiredMovie[i].score %></div>
      </div>
      <% var title_name = topAiredMovie[i].title + " (" + topAired[i].aired.string.split(" ")[2] + ")" %>
      <h4><%= title_name.slice(0, 26) %></h4>
      </a>
      <p><%= topAiredMovie[i].aired.prop.from.day %> <% var month = topAiredMovie[i].aired.string.split(" ")[0] %><%= month %> <%= topAiredMovie[i].aired.prop.from.year %></p>
    </div>
    <% } else { b++ } title = topAiredMovie[i].title; %>
   <% } %>
   <div class="text-title" style="text-align: right;">
    <a href="/search?type=topMovie"><button class="button-featured">see all</button></a>
    </div>
    
   <div class="text-title"><hr /></div>

   <div class="text-title title-featured"><h2>Top Anime</h2></div>

  
   <% var b=7;  var title = ""; for(var i=0; i<b; i++){ %>
