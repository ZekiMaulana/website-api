<div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 row-cols-lg-6 g-3 justify-content-center mx-5">
<% content.data.forEach(anime => { %>

    <%# anime.mal_id %>
    <%# anime.score %>
    <%# anime.synopsis %>
<div class="col">
    <div class="card shadow-sm" style="overflow: hidden;" >
        <img src=<%= anime.images.jpg.large_image_url %> class="card-img-top" alt="..." >
