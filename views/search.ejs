<% const data = content.data %>
<section class="main-content">

    <div class="text-title title-featured"><h2><%= locals.nameGenre %> <%= locals.year %></h2></div>
  
    <% var title = ""; for(var i=0; i<data.length; i++){ %>
      <% if(data[i].title !== title){%>
      <div class="card-film">
        <a href="/anime?animeId=<%= data[i].mal_id %>" style="color: black;">
        <div class="card-img">
        <img class="card" src=<%= data[i].images.jpg.large_image_url %> width="98%" height="325px">
        <div class="text1"><%= data[i].type %></div>
        <div class="centered"><%= data[i].synopsis %>....</div>
        <div class="text2">âœ© <%= data[i].score %></div>
        </div>
        <% var title_name = data[i].title + " (" + data[i].aired.string.split(" ")[2] + ")" %>
        <h4><%= title_name.slice(0, 26) %></h4>
        </a>
        <p><%= data[i].aired.prop.from.day %> <% var month = data[i].aired.string.split(" ")[0] %><%= month %> <%= data[i].aired.prop.from.year %></p>
